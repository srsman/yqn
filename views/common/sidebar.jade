//- 侧边栏头像
.sidebar-user-wrap
  .qn-avatar.sidebar-user-avatar
    img(src=user.avatar, width='110', height='110')
  .sidebar-user-desc
    h1.sidebar-username #{user.nickname}
    if user.signature
      .sidebar-user-intro #{user.signature}

