  .sidebar-menu-item
    ul
      li.menu-item.question.square#newSquareNum
        a(href='/question/square') 广场问答
          span.qn-badge.hide 0
      li.menu-item.question.exclusive#newExclusiveNum
        a(href='/question/exclusive') 客户问答
          span.qn-badge.hide 0

  .sidebar-menu-item
    ul
      li.menu-item.viewpoint#newViewpointNum
        a(href='/viewpoint/list') 观点
